<% if current_user.favorites.find_by(name: @person.first_name) %>
  <% fav_id = current_user.favorites.find_by(name: @person.first_name).id %> // Если нашло компанию в избранном, получаем ее id и удаляем
  <% current_user.favorites.delete(fav_id) %>
  $("<%= escape_javascript("#icon#{@person.id}") %>").removeClass()
  $("<%= escape_javascript("#icon#{@person.id}") %>").addClass('glyphicon glyphicon-star-empty')
<% else %>
  <% current_user.favorites.create(name: @person.first_name) %>
  $("<%= escape_javascript("#icon#{@person.id}") %>").removeClass()
  $("<%= escape_javascript("#icon#{@person.id}") %>").addClass('glyphicon glyphicon-star')
<% end %>
